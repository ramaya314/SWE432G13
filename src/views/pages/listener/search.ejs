<html>
    <head>
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
        <link rel="stylesheet" href="../../styles/palette.css" />
        <link rel="stylesheet" href="../../styles/main.css" />
        <link rel="stylesheet" href="../../styles/listener/listener.css" />
        <link rel="stylesheet" href="../../styles/listener/listenersearch.css" />
    </head>

    <body class = "encore-dark-theme">

        <%- include('../../partials/navbar.ejs') %> 

        <div class="content">
            <div class="pageHeader">
                <div class="contentTitle">
                    Listen
                </div>
            </div>

            <!-- MAIN CONTENT FOR LISTENER HOME -->
            <main>
                <div class="listen-content">
                
                    <%- include('../../partials/listener/sidebar.ejs') %> 
    
                    <div class="main-content">
    
                        <div class="search-content">
    
                            <div class="search-text">Search</div>
                            <form id="search-form">
                                <div class="search-bar">
                                    <input id="search-value" type="text" placeholder="Search" class="search-input">
                                    <button type="submit" class="search-button">
                                        <span class="material-symbols-outlined">
                                            search
                                        </span>
                                    </button>
                            </form>
                            </div>
    
                            <div class="list-div-wrapper">
                                <div class="heading-text DJs">Live Now</div>

                                <div id="live-dj-list">
                                    <!-- JS VALUES WILL LOAD HERE -->
                                </div>
                            </div>
    
                            <hr>
    
                            <div class="list-div-wrapper">
                                <div class="heading-text DJs">DJs</div>
    
                                <div id="dj-list">
                                    <!-- JS VALUES WILL LOAD HERE -->
                                </div>
                            </div>
                        </div>
    
                        <div class="music-bar">
    
                            <!-- Contains album cover, song name, and artist name -->
                            <div class="music-bar">
    
                                <!-- Contains album cover, song name, and artist name -->
                                <div class="music-bar-info">
                                    <img src="../../images/example-cover.jpg" />
                                    <div class="music-bar-text">
                                        <div class="music-info-ti">Song Name</div>
                                        <div class="music-info-ti">Artist Name</div>
                                    </div>
                                </div>
                                
                                <div class="music-bar-play">
                                    <audio controls autoplay muted>
                                        <source src="../../audio/trumpet.mp3" type="audio/mp3">
                                        Audio not supported by your browser
                                    </audio>
                                </div>
        
                                <div class="music-bar-func">
                                    <button id="fav-btn" class="material-symbols-outlined md-34 fav-icon">
                                        favorite
                                    </button>
                                </div>
        
                            </div>
    
                        </div>
    
                    </div>
                </div>
            </main>
        </div>

        <% include('../../partials/footer.ejs') %>

        <script src="../../scripts/listener/search.js"></script>
        <script src="../../scripts/listener/listener.js"></script>
    </body>
</html>